<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_orders_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_seller_name_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-11-21"
                    android:textSize="25sp"
                    android:background="@drawable/yellow_bottom_line"/>

                <TextView
                    android:id="@+id/tv_seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="숭실핫도그"
                    android:textSize="20dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_seller_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서울특별시 동작구 상도로 369"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:paddingRight="10dp"
                android:textSize="13dp"/>

            <LinearLayout
                android:id="@+id/ll_order_menu_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_menu"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:text="핫도그 외 2개" />
                <TextView
                    android:id="@+id/tv_order_sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="35,000원"
                    android:textSize="17sp"
                    android:textAlignment="viewEnd"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
